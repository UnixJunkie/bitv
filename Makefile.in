
# where to install
LIBDIR = @OCAMLLIB@

CMO = bitv.cmo
CMI = $(CMO:.cmo=.cmi)
MLI = $(CMO:.cmo=.mli)
CMX = $(CMO:.cmo=.cmx)
OBJS = $(CMO:.cmo=.o)

BYTEFILES = $(CMO) $(CMI) $(MLI)
OPTFILES = $(CMX) $(OBJS) 

all: @OCAMLBEST@

byte: $(CMO)

opt: $(CMO) $(CMX)

install: install-@OCAMLBEST@

install-byte:
	cp -f $(BYTEFILES) $(LIBDIR)

install-opt:
	cp -f $(BYTEFILES) $(LIBDIR)
	cp -f $(OPTFILES) $(LIBDIR)

# l.p.
######

doc: bitv.dvi

bitv.tex: bitv.mli
	@OCAMLWEB@ -s --no-index bitv.mli -o $@

bitv.dvi: bitv.tex
	latex bitv && latex bitv

bitv.ps.gz: bitv.dvi
	dvips bitv.dvi -o
	gzip --best bitv.ps

# export
########

MAJORVN=0
MINORVN=3
VERSION=$(MAJORVN).$(MINORVN)
NAME=bitv-$(VERSION)

SOURCES = bitv.mli bitv.ml Makefile.in configure .depend \
          README COPYING LGPL CHANGES

FTP=$(HOME)/WWW/ftp/ocaml/ds

export:: bitv.ps.gz $(SOURCES)
	mkdir -p export/$(NAME)
	cp $(SOURCES) export/$(NAME)
	(cd export; tar cf $(NAME).tar $(NAME); \
	gzip -f --best $(NAME).tar)
	cp -f bitv.ml bitv.mli export/$(NAME).tar.gz $(FTP)
	cp -f bitv.ps.gz $(FTP)

# generic rules :
#################

CAMLC = @OCAMLC@
CAMLCOPT = @OCAMLOPT@
FLAGS=

.SUFFIXES: .mli .ml .cmi .cmo .cmx

.mli.cmi:
	$(CAMLC) -c $(FLAGS) $<

.ml.cmo:
	$(CAMLC) -c $(FLAGS) $<

.ml.o:
	$(CAMLCOPT) -c $(FLAGS) $<

.ml.cmx:
	$(CAMLCOPT) -c $(FLAGS) $<

# myself

Makefile: Makefile.in config.status
	./config.status

config.status: configure
	./config.status --recheck

configure: configure.in
	autoconf 

# clean and depend
##################

clean:
	rm -f *~ *.cm[iox] *.o
	rm -f bitv.tex *.aux *.log *.dvi *.ps *.ps.gz

depend:
	rm -f .depend
	@OCAMLDEP@ *.mli *.ml > .depend

include .depend

